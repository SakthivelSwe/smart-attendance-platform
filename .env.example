# ==============================
# Smart Attendance Platform - Environment Variables
# ==============================
# Copy this file to .env and fill in the actual values.
# NEVER commit the .env file to Git!

# -------- Database (PostgreSQL / Supabase) --------
DB_URL=jdbc:postgresql://your-host:5432/your-database
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password

# -------- Google OAuth2 --------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret

# -------- JWT --------
JWT_SECRET=YourSuperSecretKeyThatIsAtLeast256BitsLongForHS256Algorithm!

# -------- Supabase --------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# -------- Mail --------
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# -------- Gmail API --------
GMAIL_CREDENTIALS_PATH=/path/to/google-credentials.json

# -------- CORS --------
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# -------- Spring Profile --------
SPRING_PROFILES_ACTIVE=dev
