<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Theme -->
    <style name="Theme.SmartAttendance" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.SmartAttendance.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#1A1A2E</item>
        <item name="postSplashScreenTheme">@style/Theme.SmartAttendance</item>
    </style>
</resources>
